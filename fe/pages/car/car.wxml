<view class="page">
  <form>
    <view class='list'>
      <!-- 车牌 -->
      <view class='list-item'>
        <view class='label'>
          <text class='label-text'>车牌</text>
        </view>
        <view class='list-content'>
          <input class='text-input' placeholder="输入车牌号，如京A88888" />
        </view>
      </view>
      <!---->
      <view class='list-item'>
        <view class='label'>
          <text class='label-text'>品牌</text>
        </view>
        <view class='list-content'>
          <input class='text-input' name="brand" placeholder="输入品牌，如“大众”" />
        </view>
      </view>
      <!---->
      <view class='list-item'>
        <view class='label'>
          <text class='label-text'>型号</text>
        </view>
        <view class='list-content'>
          <input class='text-input' name="model" placeholder="如“速腾”" />
        </view>
      </view>
      <!---->
      <view class='list-item'>
        <view class='label'>
          <text class='label-text'>颜色</text>
        </view>
        <view class='list-content'>
          <picker range="{{colors}}" name="color" value='{{selectedColorIndex}}' bindchange="bindPickerColorChange" range-key="label">
            <view class='picker-value'>
              <text class='placeholder' wx:if="{{ selectedColorIndex == null }}">请选择</text>
              <text wx:if="{{ selectedColorIndex >= 0 }}">{{ colors[selectedColorIndex].label }}</text>
            </view>
          </picker>
        </view>
        <image class='list-arrow' src='/images/arrow_right.png' />
      </view>
      <!---->
      <view class='list-item'>
        <view class='label'>
          <text class='label-text'>类型</text>
        </view>
        <view class='list-content'>
          <picker range="{{types}}" name="type" value='{{selectedTypeIndex}}' bindchange="bindPickerTypeChange" range-key="label">
            <view class='picker-value'>
              <text class='placeholder' wx:if="{{ selectedTypeIndex == null }}">请选择</text>
              <text wx:if="{{ selectedTypeIndex >= 0 }}">{{ types[selectedTypeIndex].label }}</text>
            </view>
          </picker>
        </view>
        <image class='list-arrow' src='/images/arrow_right.png' />
      </view>
    </view>
    <view class='btn-wrap'>
      <button type="primary" formType="submit">保存</button>
      <text class='form-info'>发布行程时自动显示的车辆信息</text>
    </view>
  </form>
</view>