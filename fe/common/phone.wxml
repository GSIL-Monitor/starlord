<template name="phone">
  <view class='list-item'>
    <view class='label'>
      <text class='label-text'>手机号码</text>
    </view>
    <view class='list-content'>
      <view wx:if="{{phone}}">{{phone}}</view>
      <view class='placeholder' wx:if="{{!phone}}">未设置手机号</view>
    </view>
    <view class='list-extra'>
      <view class='list-phone-division'></view>
      <navigator url='/pages/info/info?back=1'>
        <view class='btn-text'>
          {{ phone ? '修改' : '设置' }}
        </view>
      </navigator>
    </view>
  </view>
</template>