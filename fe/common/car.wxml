<template name="car">
  <view class='list-item'>
    <view class='label'>
      <text class='label-text'>车辆</text>
    </view>
    <view class='list-content'>
      <view wx:if="{{info.car_plate || info.car_brand || info.car_model || info.car_color || info.car_type}}" class='car-info-detail'>
        {{ info.car_plate || '' }}
        {{ info.car_brand || '' }}
        {{ info.car_model || '' }}
        {{ info.car_color || '' }}
        {{ info.car_type || '' }}
      </view>
      <view class='placeholder' wx:if="{{!info.car_plate}}">未设置车辆</view>
    </view>
    <view class='list-extra'>
      <view class='list-car-division'></view>
      <navigator url='/pages/car/car?back=1'>
        <view class='btn-text'>
          {{ info.car_plate ? '修改' : '设置' }}
        </view>
      </navigator>
    </view>
  </view>
</template>